<Window x:Class="CardADay.MainWindow"
        DataContext="{local:DISource Type=viewModel:MainWindowViewModel}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardADay"
        xmlns:viewModel="clr-namespace:CardADay.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600"
        Width="350">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="Filter">
                  
            </MenuItem>
        </Menu>
        <Label DockPanel.Dock="Top"
               HorizontalAlignment="Center">
            Card A Day
        </Label>
        <Image DockPanel.Dock="Top"
               Source="img/test-card.png"
               Width="250"
               Height="400">
        </Image>
        <TextBlock Text="{Binding Card}" />
        <Button DockPanel.Dock="Bottom"
                Click="CallMtgTest">
            Get A Card
        </Button>
        
        <Button DockPanel.Dock="Bottom">
            Reload Card Database
        </Button>
    </DockPanel>
</Window>
